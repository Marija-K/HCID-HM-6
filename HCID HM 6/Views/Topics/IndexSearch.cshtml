@model IEnumerable<HCID_HM.Models.Topic>

@{
    ViewData["Title"] = "Index";
}

<h2>Favorites</h2>


<div class="row">
    <div class="col-3">
        <form asp-action="IndexSearch" asp-controller="Topics">
            <input type="text" placeholder="Search" name="search" />
            <button type="submit">Search</button>
        </form>
        <br>
        <h3>Categories</h3>
        <div class="list-group">
            <a class="list-group-item" href="/Topics/IndexFiltered?filter=Animals">Animals</a>
            <a class="list-group-item" href="/Topics/IndexFiltered?filter=Charity">Charity</a>
            <a class="list-group-item" href="/Topics/IndexFiltered?filter=Nature">Nature</a>
            <a class="list-group-item" href="/Topics/IndexFiltered?filter=Social">Social</a>
            <a class="list-group-item" href="#">...</a>
        </div>
    </div>
    <div class="col-6">
        @{
            foreach (var item in Model)
            {
                <div class="card">
                    <h3>@item.Name</h3>
                    <div>
                        <span class="float-left">
                            <img src="@item.Image" style="max-width:300px" class="p-2"/>
                        </span>
                        <span class="float-left">
                            <p style="word-wrap:break-word">@item.Description</p>
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.TopicId">View Topic</a>
                        </span>
                    </div>
                </div>
            }
        }
    </div>
    <div class="col-3">
        <h3>Calendar</h3>

    </div>
</div>