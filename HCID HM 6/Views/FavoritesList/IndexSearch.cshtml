@model HCID_HM.Models.FavoritesListDTO

@{
    ViewData["Title"] = "Index";
}

<h2>Favorites</h2>

<div class="row">
    <div class="col-10">
        <div class="row">
            @foreach (var item in Model.TopicsInFavoritesList)
            {
                <div class="col-6">
                    <div class="card p-2" style="height:375px">
                    
                            <img src="@item.Topic.Image" class="img-fluid" />
                            <div>
                                <h4>@item.Topic.Name</h4>
                                <p>@item.Topic.Description</p>
                                <a class="btn btn-primary" href="/Topics/DetailsToRemove/@item.Topic.TopicId">View Topic</a>
                            </div>
                    
                    </div>
            
                </div>
            }
        </div>
    </div>
    <div class="col-2">
        <form asp-action="IndexSearch" asp-controller="FavoritesList">
            <input type="text" placeholder="Search" name="search" />
            <button type="submit">Search</button>
        </form>
        <h3>Categories</h3>
        <div class="list-group">
            <a class="list-group-item" href="/FavoritesList/IndexFiltered?filter=Animals">Animals</a>
            <a class="list-group-item" href="/FavoritesList/IndexFiltered?filter=Charity">Charity</a>
            <a class="list-group-item" href="/FavoritesList/IndexFiltered?filter=Nature">Nature</a>
            <a class="list-group-item" href="/FavoritesList/IndexFiltered?filter=Social">Social</a>
            <a class="list-group-item" href="#">...</a>
        </div>
    </div>
</div>